/**
 * Implementation of hook_menu().
 */
function yp_menu() {
  $items = array();
  $items['yp/dir'] = array(
    'title' => 'YP directory',
    'page callback' => 'yp_dir',
    'access arguments' => array('access content'),
    'type' => MENU_SUGGESTED_ITEM,
    'file' => 'yp.dir.inc',
  );
  $items['yp/cgi'] = array(
    'title' => 'YP CGI',
    'page callback' => 'yp_cgi',
    'access arguments' => array('access content'),
    'type' => MENU_CALLBACK,
    'file' => 'yp.cgi.inc',
  );
  $items['admin/settings/yp'] = array(
    'title' => 'YP settings',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('yp_admin_settings'),
    'access arguments' => array('administer site configuration'),
    'type' => MENU_NORMAL_ITEM,
    'file' => 'yp.admin.inc',
  );
  return $items;
}

/**
 * Implementation of hook_block().
 */
function yp_block($op = 'list', $delta = 0, $edit = array()) {
  if ($op == 'list') {
    $blocks[0] = array(
      'info' => t('YP directory'),
      'cache' => BLOCK_NO_CACHE,
    );
    return $blocks;
  }
  else if ($op == 'view') {
    switch($delta) {
      case 0:
        $block = array(
          'subject' => t('Live radio directory'),
          'content' => theme('yp_dir'),
        );
        break;
    }
    return $block;
  }
}

/**
 * Implementation of hook_theme().
 */
function yp_theme() {
  return array(
    'yp_dir' => array(
      'arguments' => array(),
      'file' => 'yp.dir.inc',
    ),
  );
}
